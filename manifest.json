{
  "manifest_version": 3,
  "name": "FAU Chat Assistant",
  "version": "0.1.0",
  "description": "Chatbot popup that gives step-by-step guidance and highlights UI elements on fau.edu pages.",
  "permissions": ["scripting", "activeTab", "tabs", "storage"],
  "host_permissions": ["*://*.fau.edu/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.fau.edu/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
